{
    "name": "@blueprintjs/labs",
    "version": "6.1.1",
    "description": "Incubator for unstable and in-development Blueprint components",
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.js",
    "esnext": "lib/esnext/index.js",
    "typings": "lib/esm/index.d.ts",
    "style": "lib/css/blueprint-labs.css",
    "scripts": {
        "clean": "rm -rf lib/* || true",
        "compile": "run-p \"compile:*\"",
        "compile:esm": "tsc -p ./src",
        "compile:cjs": "tsc -p ./src -m commonjs --verbatimModuleSyntax false --outDir lib/cjs",
        "compile:esnext": "tsc -p ./src -t esnext --outDir lib/esnext",
        "compile:css": "sass-compile ./src",
        "dev": "run-p \"compile:esm --watch\" \"compile:css --watch\"",
        "dist": "run-s \"dist:*\"",
        "dist:css": "css-dist lib/css",
        "lint": "run-p lint:scss lint:es",
        "lint:es": "es-lint",
        "lint:scss": "sass-lint",
        "lint-fix": "es-lint --fix && sass-lint --fix",
        "start": "pnpm dev",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "verify": "npm-run-all compile -p dist test lint"
    },
    "dependencies": {
        "@blueprintjs/colors": "workspace:^",
        "@blueprintjs/core": "workspace:^",
        "classnames": "catalog:",
        "tslib": "catalog:"
    },
    "peerDependencies": {
        "@types/react": "18",
        "react": "18",
        "react-dom": "18"
    },
    "peerDependenciesMeta": {
        "@types/react": {
            "optional": true
        }
    },
    "devDependencies": {
        "@blueprintjs/node-build-scripts": "workspace:^",
        "@blueprintjs/stylelint-plugin": "workspace:^",
        "@blueprintjs/test-commons": "workspace:^",
        "@blueprintjs/webpack-build-scripts": "workspace:^",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@vitejs/plugin-react": "^5.1.0",
        "jsdom": "^27.1.0",
        "npm-run-all": "^4.1.5",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "typescript": "~5.3.3",
        "vite": "^7.1.2",
        "vitest": "^4.0.7"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/palantir/blueprint.git",
        "directory": "packages/labs"
    },
    "keywords": [
        "palantir",
        "blueprint",
        "react",
        "labs"
    ],
    "author": "Palantir Technologies",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/palantir/blueprint/issues"
    },
    "homepage": "https://github.com/palantir/blueprint#readme"
}
